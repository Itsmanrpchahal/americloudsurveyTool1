// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  email      String    @unique
  name       String?
  password   String
  typeId     UserTypes @relation(fields: [userTypeId], references: [id])
  userTypeId Int
  overlays overlays[]
  tools tools[]
  layers layers[]
}

model UserTypes {
  id   Int    @id @default(autoincrement())
  name String @unique
  User User[]
}

model projects {
  id   Int    @id @default(autoincrement())
  title String
  vanue_title String
  conducted_by String
}

model overlays {
  id   Int    @id @default(autoincrement())
  title String
  description String?
  userId User @relation(fields: [created_by], references: [id])
  created_by Int
  layers layers[]
}

model tools {
  id   Int    @id @default(autoincrement())
  title String
  img String?
  description String?
  userId User @relation(fields: [created_by], references: [id])
  created_by Int
  layers layers[]
}

model layers {
  id   Int    @id @default(autoincrement())
  title String
  img String?
  description String?
  overlayId overlays @relation(fields: [overlay_id], references: [id])
  overlay_id Int
  toolId tools @relation(fields: [tool_id], references: [id])
  tool_id Int
  userId User @relation(fields: [created_by], references: [id])
  created_by Int
}